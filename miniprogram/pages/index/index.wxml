<!--pages/index/index.wxml-->
<!--pages/activity/index.wxml-->
<view class="index">
  <view class="index-hd" style="background-image:url(resources/map.png)">
    <button class="index-search" bindtap="search">
      <!-- <image class='search-icon' src='resources/search-icon.png'></image> -->
      <!-- <image class='search-icon' src='resources/search-icon.png'></image> -->
      <view class="search-text"> 请输入您想去的目的地 </view>
    </button>
  </view>
  <view class="index-md">当下热门目的地</view>
  <view class="index-buttonrow">
    <button class="index-button" plain='true' style="background-image:url(resources/travel.jpg)" bindtap="GoTOTravel">
      <view class="button-text"> 旅游 </view>
    </button>
    <button class="index-button" plain='true' style="background-image:url(resources/food.jpg)" bindtap="GoTOFood">
      <view class="button-text"> 美食 </view>
    </button>
    <button class="index-button" plain='true' style="background-image:url(resources/sport.jpg)" bindtap="GoTOSport">
      <view class="button-text"> 运动 </view>
    </button>
  </view>
  <view class="index-buttonrow">
    <button class="index-button" plain='true' style="background-image:url(resources/office.jpg)" bindtap="GoTOOffice">
      <view class="button-text"> 办公 </view>
    </button>
    <button class="index-button" plain='true' style="background-image:url(resources/study.jpg)" bindtap="GoTOStudy">
      <view class="button-text"> 学习 </view>
    </button>
    <button class="index-button" plain='true' style="background-image:url(resources/other.jpg)" bindtap="GotoMap">
      <view class="button-text"> 地图 </view>
    </button>
  </view>
</view>