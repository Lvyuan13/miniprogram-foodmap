<!--pages/index/index.wxml-->
<!--pages/activity/index.wxml-->
<view class="index">
  <view class="index-hd" style="background-image:url({{picture.map}})">
    <!-- <image class="index-hd" src="{{picture.map}}" /> -->
     <!-- <image src="{{picture.map}}"  mode="aspectFit"  /> -->
    <button class="index-search" bindtap="search">
      <!-- <image class='search-icon' src='resources/search-icon.png'></image> -->
      <!-- <image class='search-icon' src='resources/search-icon.png'></image> -->
      <view class="search-text"> 请输入您想去的目的地 </view>
    </button>
  </view>
  <view class="index-md">当下热门目的地</view>
  <view class="index-buttonrow">
    <button class="index-button" plain='true' style="background-image:url({{picture.travel}})" bindtap="GoTOTravel">
      <view class="button-text"> 旅游 </view>
    </button>
    <button class="index-button" plain='true' style="background-image:url({{picture.food}})" bindtap="GoTOFood">
      <view class="button-text"> 美食 </view>
    </button>
    <button class="index-button" plain='true' style="background-image:url({{picture.sport}})" bindtap="GoTOSport">
      <view class="button-text"> 运动 </view>
    </button>
  </view>
  <view class="index-buttonrow">
    <button class="index-button" plain='false' style="background-image:url({{picture.office}})" bindtap="GoTOOffice">
      <view class="button-text"> 办公 </view>
    </button>
    <button class="index-button" plain='true' style="background-image:url({{picture.study}})" bindtap="GoTOStudy">
      <view class="button-text"> 学习 </view>
    </button>
    <button class="index-button" plain='true' style="background-image:url({{picture.other}})" bindtap="GotoMap">
      <view class="button-text"> 地图 </view>
    </button>
  </view>
</view>