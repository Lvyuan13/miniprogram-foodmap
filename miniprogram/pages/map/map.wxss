map{
  width: 750rpx;
}
.show_all{
  position: absolute;
  right: 290rpx;
  bottom: 100rpx;
  color: #7795f8;
  background-color: rgb(255, 255, 255);
  box-shadow: 0 4px 6px  rgb(255, 255, 255), 0 1px 3px  rgb(255, 255, 255);
}
.cover{
  color: #fff;
  height: 100rpx;
  width: 220rpx;
  line-height: 100rpx;
  font-size: 35rpx;
  text-align: center;
  position: absolute;
  left: 100rpx;
  bottom: 100rpx;
  border-radius: 50rpx;
  text-shadow: 0 1px 3px#fff;
}
.add_me{
  font-size:30rpx;
  color: #fff;
  background-color: #5CACEE;
  width: 450rpx;
  padding:20rpx;
  position: absolute;
  right: 10rpx;
  top:20rpx;
  text-align: center;
}
.up{
  position: absolute;
  right:150rpx;
  top:5rpx;
  border-right:20rpx solid transparent;
	border-left:20rpx solid transparent;
	border-bottom:20rpx solid rgb(62, 207, 142);
}